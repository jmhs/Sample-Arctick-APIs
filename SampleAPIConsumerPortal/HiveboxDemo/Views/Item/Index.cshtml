@model HiveboxDemo.Models.Item.ItemViewModel

@{
    ViewBag.Title = "Item Detail";
}

<div class="row">   
    <div class="col-md-12 border-right">
        <h3>Item Detail</h3>
        <br />
    </div>
    <div class="col-md-12 border-right">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">Item Name</label>
                <div class="col-sm-10">
                    <div class="data-value">@Model.ItemName</div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Description</label>
                <div class="col-sm-10">
                    <div class="data-value">@Model.BuyerDescription</div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Price</label>
                <div class="col-sm-10">
                    <div class="data-value">$ @Model.Price.ToString("#,##0.00")</div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Qty In Stock</label>
                <div class="col-sm-10">
                    @if (Model.StockLimited)
                    {
                        <div class="data-value">@Model.QtyLeft.ToString("#,##0")</div>
                    }
                    else
                    {
                        <div class="data-value">Unlimited stock</div>
                    }
                </div>
            </div>            
            <div class="form-group">
                <label class="col-sm-2 control-label">Images</label>
                <div class="col-sm-10">
                    @foreach (var image in Model.Images)
                    {
                        <img src="@($"{Html.ApiHost()}{image}")" class="m-r" style="max-width: 250px; max-height: 250px;" />
                    }
                </div>
            </div>
            <div class="form-group">                
                <div class="col-sm-10 col-sm-offset-2">
                    <br />
                    <br />
                    <button type="button" onclick="addItemToCart(@(Model.ID));" class="btn btn-primary m-r">Add To Cart</button>
                    <a href="/cart" class="btn btn-success">View Cart</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/cart.js"></script>
}